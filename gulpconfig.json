{
  "version": "2.10.0",
  "versiondate": "2016-09-19",
  "gulpfileversion": "3.2.0",
  "general" : {
    "projectpath" : "example.dev/",
    "logopath" : "images/logos/logo.png",
    "themeroot" : "./"
  },
  "locations" : {
    "src" : {
      "scsspath" : "scss/",
      "jspath" : "js/",
      "imagespath" : "images/0_src/",
      "fontspath" : "fonts/",
      "iconspath" : "fonts/iconfonts/",
      "templatepath" : "/template/",
      "functionspath" : "/functions/"
    },
    "dist" : {
      "csspath" : "css/",
      "jspath" : "js/"
    }
  },
  "css" : {
    "browsersupport": ["last 25 versions"],
    "minify" : false,
    "gzip" :  false,
    "compass" :  false,
    "exclude" : [
      "**/*"
    ],
    "specificitygraphlocation" : "specificity-graph",
    "sourcemaps" : {
      "sourcemaps" :  true,
      "location" : "/",
      "loadmaps" : false,
      "identitymap" : false,
      "debug" : false,
      "addcomment" : true,
      "includecontent" : true,
      "charset" : "utf8",
      "destpath" : "",
      "sourcemappingurlprefix" : ""
    },
    "linter" : {
      "config" : ".sass-lint.yml"
    },
    "parker" : {
      "log" : true,
      "logname" : "parker_css_report"
    }
  },
  "js" : {
    "jspluginspath" : "js/plugins/",
    "eslint" : {
      "configlocation" : ".eslintrc"
    },
    "sourcemaps" : {
      "sourcemaps" : true,
      "location" : "",
      "loadmaps" : false,
      "identitymap" : false,
      "debug" : false,
      "addcomment" : true,
      "includecontent" : true,
      "charset" : "utf8",
      "destpath" : "",
      "sourcemappingurlprefix" : ""
    },
    "minify" : false,
    "gzip" : false,
    "bootstrap" : {
      "alertjs": false,
      "buttonjs": false,
      "carouseljs": false,
      "collapsejs": false,
      "dropdownjs": false,
      "modaljs": false,
      "popoverjs": false,
      "scrollspyjs": false,
      "tabjs": false,
      "tooltipjs": false
    },
    "modernizr" : {
      "alwaysinclude" : ["setClasses","addTest","html5printshiv","testProp","fnBind"],
      "alwaysexclude" : [""]
    }
  },
  "libraries" : {
    "path" : {
      "js" : "js/libraries",
      "scss" : "scss/libraries"
    },
    "bower" : {
      "path" : "bower_components",
      "interactive" : true,
      "verbosity" : 2
    }
  },
  "taskconfig" : {
    "watchtasks" : ["jslibs"],
    "watch" : {
      "lintscss" : true,
      "javascript" : true
    }
  },
  "browsersync" : {
    "open" : false,
    "loglevel" : "info",
    "logfilechanges" : false,
    "watch" : {
      "icons" : true,
      "fonts" : true,
      "images" : true,
      "javascript" : true,
      "phpfunctions" : true,
      "template" : true,
      "yaml" : true
    }
  },
  "share" : {
    "open" : false,
    "clicks" : false,
    "forms" : false,
    "scroll" : false,
    "port" : 3333
  },
  "quality" : {
    "maxsize" : {
      "maxsize" : "30000",
      "css" : "10000",
      "js" : "10000",
      "images" : "15000"
    }
  },
  "accessibility" : {
    "pa11y" : {
      "standard" : "WCAG2AA",
      "failonerror" : true,
      "showfailedonly" : true,
      "reporter" : "console",
      "htmlcs" : "http://squizlabs.github.io/HTML_CodeSniffer/build/HTMLCS.js",
      "config" : null,
      "timeout" : 30000
    }
  }
}