{
  "version": "4.0.0",
  "versiondate": "2017-08-11",
  "gulpVersion": "4.0.0",
  "general" : {
    "projectpath" : "example.dev",
    "logopath" : "images/logos/logo.png"
  },
  "locations" : {
    "styles" : {
      "src": "scss/",
      "dist": "css/",
      "libaries": "scss/libraries"
    },
    "javascript" : {
      "src": "js/",
      "dist": "js/",
      "libaries": "js/libraries/"
    },
    "icons" : {
      "src": "fonts/iconfonts/"
    },
    "fonts" : {
      "src": "fonts/"
    },
    "images" : {
      "src": "images/0_src/",
      "dist": "images/"
    },
    "php" : {
      "src": ["template/", "functions/"]
    },
    "yaml" : {
      "src": "./"
    }
  },
  "css" : {
    "browsersupport": ["last 25 versions"],
    "minify" : false,
    "gzip" :  false,
    "compass" :  false,
    "exclude" : [
      "**/*"
    ],
    "sourcemaps" : {
      "generate" :  true,
      "location" : "/",
      "loadmaps" : false,
      "identitymap" : false,
      "debug" : false,
      "addcomment" : true,
      "includecontent" : true,
      "charset" : "utf8",
      "destpath" : "",
      "sourcemappingurlprefix" : ""
    },
    "linter" : {
      "config" : ".sass-lint.yml"
    }
  },
  "js" : {
    "sourcemaps" : {
      "generate" : true,
      "location" : "",
      "loadmaps" : false,
      "identitymap" : false,
      "debug" : false,
      "addcomment" : true,
      "includecontent" : true,
      "charset" : "utf8",
      "destpath" : "",
      "sourcemappingurlprefix" : ""
    },
    "minify" : false,
    "gzip" : false,
    "bootstrap" : {
      "alert": true,
      "button": false,
      "carousel": false,
      "collapse": false,
      "dropdown": false,
      "modal": false,
      "popover": false,
      "scrollspy": true,
      "tab": false,
      "tooltip": true
    },
    "modernizr" : {
      "alwaysinclude" : ["setClasses","addTest","html5printshiv","testProp","fnBind"],
      "alwaysexclude" : [""]
    }
  },
  "images" : {
    "gif" : {
      "interlaced" : true,
      "optimizationlevel" : 3
    },
    "jpeg" : {
      "progressive" : true,
      "max" : 80
    },
    "png" : {
      "floyd" : 0.5,
      "nofs" : false,
      "quality" : 100,
      "speed" : 3,
      "verbose" : false
    },
    "webp" : {
      "use" : true,
      "preset" : "default",
      "quality" : 75,
      "alphaQuality" : 100,
      "method" : 4,
      "sns" : 80,
      "lossless" : false
    }
  },
  "watch" : {
    "styles" : {
      "use" : true,
      "extensions": ["scss", "sass"],
      "tasks" : ["styles", "lint"]
    },
    "icons" : {
      "use": true,
      "extensions": ["eot", "woff", "ttf", "svg"]
    },
    "fonts" : {
      "use": true,
      "extensions": ["eot", "woff", "ttf", "svg"]
    },
    "images" : {
      "use": true,
      "extensions": ["jpg", "jpeg", "png", "svg", "gif", "webp"]
    },
    "javascript" : {
      "use": true,
      "extensions": ["js", "json"]
    },
    "php" : {
      "use": true,
      "extensions": ["php", "phtml"]
    },
    "twig" : {
      "use": true,
      "extensions": ["twig"]
    },
    "yaml" : {
      "use": true,
      "extensions": ["yml"]
    }
  },
  "browsersync" : {
    "open" : false,
    "loglevel" : "info",
    "logfilechanges" : false
  },
  "share" : {
    "open" : false,
    "clicks" : false,
    "forms" : false,
    "scroll" : false,
    "port" : 3333
  },
  "quality" : {
    "maxsize" : {
      "general" : "30000",
      "css" : "10000",
      "js" : "10000",
      "images" : "15000"
    }
  }
}